    "express-rate-limit": "^7.4.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.13.3",
    "express-validator": "^7.2.0",
    "multer": "^1.4.5-lts.1",
    "prisma": "^6.1.0",
    "@prisma/client": "^6.1.0",
    "winston": "^3.17.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1",
